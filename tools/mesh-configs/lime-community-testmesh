config lime 'system'
	option hostname 'TestMesh-%M4%M5%M6'
	option domain 'mesh.local'
	option keep_on_upgrade 'libremesh base-files-essential /etc/sysupgrade.conf'
	option root_password_md5 '$1$TestMesh$7wqzKgUByxaB4J3LiNthu1'
	option wifi_country 'US'
	option zonename 'America/New_York'

config lime 'network'
	option primary_interface 'eth0'
	option main_ipv4_address '10.13.0.0/16'
	option main_ipv6_address '2a00:1508:0a13::/64'
	option anygw_dhcp_start '2'
	option anygw_dhcp_limit '0'
	option anygw_mac '02:ca:ff:ee:ba:be'
	option bmx6_over_batman 'false'
	option bmx6_publish_ownip 'false'
	option bmx6_wifi_rate_max '54000000'
	option bmx7_over_batman 'false'
	option bmx7_publish_ownip 'false'

config lime 'wifi' 'radio0'
	option modes 'ap adhoc'
	option ap_ssid 'TestMesh.org'
	option ap_key 'TestMesh2024!'
	option ap_encryption 'psk2'
	option adhoc_ssid 'TM-adhoc'
	option adhoc_bssid 'ca:fe:00:c0:ff:ee'
	option adhoc_mcast_rate_2ghz '24000'
	option adhoc_mcast_rate_5ghz '6000'
	option distance_2ghz '1000'
	option distance_5ghz '1000'
	option channel_2ghz '11'

config lime 'wifi' 'radio1'
	option modes 'ap adhoc'
	option ap_ssid 'TestMesh.org'
	option ap_key 'TestMesh2024!'
	option ap_encryption 'psk2'
	option adhoc_ssid 'TM-adhoc'
	option adhoc_bssid 'ca:fe:00:c0:ff:ee'
	option adhoc_mcast_rate_5ghz '6000'
	option distance_5ghz '1000'
	option channel_5ghz '48'

config lime 'proto' 'batadv'
	option gw_sel_class '20'
	option orig_interval '5000'
	option log_level '0'

config lime 'proto' 'bmx6'
	option mtu '1500'

config lime 'proto' 'bmx7'
	option mtu '1500'

config lime 'proto' 'babeld'
	option rxcost '96'
	option hello_interval '4'

config lime 'firewall'
	option ula_prefix 'fd13:7e12:9483::/48'
	option block_lan_clients 'false'

config lime 'gateway'
	option search_file '/tmp/gateway'
	option mode 'bmx6'
